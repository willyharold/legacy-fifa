{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tchats list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tchat in tchats %}
            <tr>
                <td><a href="{{ path('tchat_show', { 'id': tchat.id }) }}">{{ tchat.id }}</a></td>
                <td>{{ tchat.contenu }}</td>
                <td>{% if tchat.date %}{{ tchat.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tchat_show', { 'id': tchat.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('tchat_edit', { 'id': tchat.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tchat_new') }}">Create a new tchat</a>
        </li>
    </ul>
{% endblock %}
