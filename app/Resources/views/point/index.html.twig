{% extends 'base.html.twig' %}

{% block body %}
    <h1>Points list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nbrepoints</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for point in points %}
            <tr>
                <td><a href="{{ path('point_show', { 'id': point.id }) }}">{{ point.id }}</a></td>
                <td>{{ point.nbrePoints }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('point_show', { 'id': point.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('point_edit', { 'id': point.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('point_new') }}">Create a new point</a>
        </li>
    </ul>
{% endblock %}
