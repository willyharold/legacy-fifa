{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tournois</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tournois.id }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ tournois.designation }}</td>
            </tr>
            <tr>
                <th>Nbrequipe</th>
                <td>{{ tournois.nbrEquipe }}</td>
            </tr>
            <tr>
                <th>Coordonnees</th>
                <td>{{ tournois.coordonnees }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if tournois.dateDebut %}{{ tournois.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if tournois.dateFin %}{{ tournois.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ tournois.etat }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ tournois.type }}</td>
            </tr>
            <tr>
                <th>Type_tournois</th>
                <td>{{ tournois.typetournois }}</td>
            </tr>
            <tr>
                <th>Type_ligue</th>
                <td>{{ tournois.typeligue }}</td>
            </tr>
            <tr>
                <th>Niveau1</th>
                <td>{{ tournois.niveau1 }}</td>
            </tr>
            <tr>
                <th>Niveau2</th>
                <td>{{ tournois.niveau2 }}</td>
            </tr>
            <tr>
                <th>Niveau3</th>
                <td>{{ tournois.niveau3 }}</td>
            </tr>
            <tr>
                <th>Niveau4</th>
                <td>{{ tournois.niveau4 }}</td>
            </tr>
            <tr>
                <th>Niveau5</th>
                <td>{{ tournois.niveau5 }}</td>
            </tr>
            <tr>
                <th>Etat_ligue</th>
                <td>{{ tournois.etatligue }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tournois_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tournois_edit', { 'id': tournois.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
